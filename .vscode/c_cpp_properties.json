{
    "version": 4,
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/",
                "${workspaceFolder}/build/_deps/**",
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/src/LinAlg/**",
                "${workspaceFolder}/include/**",
                "${workspaceFolder}/include/LinAlg/**"
            ],
            "cppStandard": "c++20",
            "intelliSenseMode": "${default}",
            "configurationProvider": "ms-vscode.cmake-tools",
            "defines": [
                "MATHUTILS_TEST_REPORT_DIR=\"build/test-reports/\""
            ],
            "compilerPath": "/usr/bin/g++"
        }
    ]
}